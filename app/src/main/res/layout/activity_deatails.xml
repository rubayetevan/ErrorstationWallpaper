<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_deatails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.errorstation.wallpaper.activities.DetailsActivity">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/testimgV"
        android:layout_width="120dp"
        android:layout_height="150dp" />
    <LinearLayout

        android:orientation="vertical"
        android:id="@+id/color1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/color2"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/color1"
        android:layout_marginTop="10dp"
        android:layout_below="@id/testimgV"
        android:orientation="vertical"
        android:id="@+id/color2"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/color2"
        android:layout_marginTop="10dp"
        android:layout_below="@id/testimgV"
        android:orientation="vertical"
        android:id="@+id/color3"
        android:layout_width="50dp"
        android:layout_height="50dp"/>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/color1"
        android:orientation="vertical"
        android:id="@+id/color4"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/color4"
        android:layout_marginTop="10dp"
        android:layout_below="@id/color2"
        android:orientation="vertical"
        android:id="@+id/color5"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/color5"
        android:layout_marginTop="10dp"
        android:layout_below="@id/color3"
        android:orientation="vertical"
        android:id="@+id/color6"
        android:layout_width="50dp"
        android:layout_height="50dp"/>




</RelativeLayout>
